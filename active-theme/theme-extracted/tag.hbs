{{!< default}}

<!-- Enhanced Tag Page Schema for AI Discovery -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "@id": "{{url absolute="true"}}/#collection",
  "name": "{{tag.name}} - CURATIONSLA",
  "description": "{{#if tag.description}}{{tag.description}}{{else}}Los Angeles {{tag.name}} content from CURATIONSLA community newsletter{{/if}}",
  "url": "{{url absolute="true"}}",
  "mainEntity": {
    "@type": "ItemList",
    "name": "{{tag.name}} Articles",
    "description": "Community-curated content about {{tag.name}} in Los Angeles",
    "numberOfItems": "{{pagination.total}}",
    "itemListElement": [
      {{#foreach posts}}
      {
        "@type": "Article",
        "position": {{@index}},
        "name": "{{title}}",
        "url": "{{url absolute="true"}}",
        "datePublished": "{{date published_at format="YYYY-MM-DD"}}",
        "author": {
          "@type": "Organization",
          "name": "CURATIONSLA"
        }
      }{{#unless @last}},{{/unless}}
      {{/foreach}}
    ]
  },
  "about": {
    "@type": "Thing",
    "name": "{{tag.name}}",
    "description": "Los Angeles {{tag.name}} community content"
  },
  "audience": {
    "@type": "Audience",
    "audienceType": "Los Angeles residents interested in {{tag.name}}",
    "geographicArea": {
      "@type": "City", 
      "name": "Los Angeles"
    }
  },
  "publisher": {
    "@type": "Organization",
    "@id": "{{@site.url}}/#organization",
    "name": "CURATIONSLA"
  },
  "spatialCoverage": {
    "@type": "Place",
    "name": "Los Angeles, California",
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 34.0522,
      "longitude": -118.2437
    }
  }
}
</script>

