    link.addEventListener('click', function() {
      const businessName = this.textContent || this.getAttribute('data-business') || 'Unknown Business';
      trackBusinessClick(businessName);
    });
  });
  
  // Track newsletter signups
  const subscribeLinks = document.querySelectorAll('a[href*="portal/signup"], .nav-subscribe');
  subscribeLinks.forEach(link => {
    link.addEventListener('click', function() {
      trackNewsletterSignup('navigation');
    });
  });

  // Optimize content images with lazy loading (exclude feature images)
  const contentImages = document.querySelectorAll('.post-content img, .page-content img');
  contentImages.forEach((img, index) => {
    // First image already loaded, lazy load the rest
    if (index > 0) {
      img.setAttribute('loading', 'lazy');
    }
    img.setAttribute('decoding', 'async');

    // Add width/height if missing to prevent CLS
    if (!img.hasAttribute('width') && img.naturalWidth) {
      img.setAttribute('width', img.naturalWidth);
    }
    if (!img.hasAttribute('height') && img.naturalHeight) {
      img.setAttribute('height', img.naturalHeight);
    }
  });
});
