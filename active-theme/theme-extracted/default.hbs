<script>
function toggleMobileMenu(){
  const primaryNav = document.querySelector('.primary-nav');
  const btn = document.querySelector('.mobile-menu-toggle');

  const primaryOpen = primaryNav.classList.toggle('open');

  btn.setAttribute('aria-expanded', primaryOpen ? 'true' : 'false');

  // Update button text
  btn.textContent = primaryOpen ? '‚úï' : '‚ò∞';
}

// Universal navigation hide/show on scroll - modern minimal effect
let lastScrollY = window.scrollY;
let ticking = false;

function updateNavOnScroll() {
  const header = document.querySelector('.site-header');
  const currentScrollY = window.scrollY;

  // Universal scroll effect - works on all pages
  if (currentScrollY > 150 && currentScrollY > lastScrollY) {
    // Scrolling down & past 150px - hide navigation
    header.classList.add('hide-on-scroll');
  } else if (currentScrollY < lastScrollY || currentScrollY < 50) {
    // Scrolling up or near top - show navigation
    header.classList.remove('hide-on-scroll');
  }

  lastScrollY = currentScrollY;
  ticking = false;
}

function requestScrollUpdate() {
  if (!ticking) {
    requestAnimationFrame(updateNavOnScroll);
    ticking = true;
  }
}

// Initialize scroll listener
window.addEventListener('scroll', requestScrollUpdate, { passive: true });

// Read Progress Bar & Scroll to Top Button
function updateReadProgress() {
  const progressBar = document.getElementById('readProgressBar');
  const scrollToTopBtn = document.getElementById('scrollToTop');
  const scrollPercent = document.getElementById('scrollPercent');

  if (!progressBar) return;

  const windowHeight = window.innerHeight;
  const documentHeight = document.documentElement.scrollHeight - windowHeight;
  const scrolled = window.scrollY;
  const progress = (scrolled / documentHeight) * 100;

  // Update progress bar
  progressBar.style.width = progress + '%';

  // Update scroll to top button
  if (scrollToTopBtn && scrollPercent) {
    const roundedProgress = Math.round(progress);
    scrollPercent.textContent = roundedProgress + '%';

    // Show button after 50% scroll
    if (progress > 50) {
      scrollToTopBtn.classList.add('visible');
    } else {
      scrollToTopBtn.classList.remove('visible');
    }
  }
}

// Scroll to top on button click
function scrollToTop() {
  window.scrollTo({
    top: 0,
    behavior: 'smooth'
  });
}

// Update progress on scroll
window.addEventListener('scroll', updateReadProgress, { passive: true });
// Update on load
window.addEventListener('load', updateReadProgress);

// Attach scroll to top button click handler
document.addEventListener('DOMContentLoaded', function() {
  const scrollToTopBtn = document.getElementById('scrollToTop');
  if (scrollToTopBtn) {
    scrollToTopBtn.addEventListener('click', scrollToTop);
  }
});

// Share Article Function
function shareArticle(title, url) {
  const shareText = `Check out this Good Vibes LA article from CurationsLA: ${title} ${url}`;

  // Try to copy to clipboard
  if (navigator.clipboard && navigator.clipboard.writeText) {
    navigator.clipboard.writeText(url).then(function() {
      showToast('ü§ô Link copied! Share the good vibes!');
    }).catch(function() {
      // Fallback if clipboard API fails
      fallbackCopyToClipboard(url);
    });
  } else {
    // Fallback for older browsers
    fallbackCopyToClipboard(url);
  }
}

// Fallback copy method for older browsers
function fallbackCopyToClipboard(text) {
  const textArea = document.createElement('textarea');
  textArea.value = text;
  textArea.style.position = 'fixed';
  textArea.style.left = '-999999px';
  document.body.appendChild(textArea);
  textArea.select();
  try {
    document.execCommand('copy');
    showToast('ü§ô Link copied! Share the good vibes!');
  } catch (err) {
    showToast('‚ùå Copy failed - please copy manually');
  }
  document.body.removeChild(textArea);
}

// Toast Notification
function showToast(message) {
  // Remove existing toast if any
  const existingToast = document.querySelector('.toast');
  if (existingToast) {
    existingToast.remove();
  }

  // Create new toast
  const toast = document.createElement('div');
  toast.className = 'toast';
  toast.textContent = message;
  document.body.appendChild(toast);

  // Show toast
  setTimeout(() => toast.classList.add('show'), 100);

  // Hide and remove toast after 3 seconds
  setTimeout(() => {
    toast.classList.remove('show');
    setTimeout(() => toast.remove(), 300);
  }, 3000);
}

// Article Load Animations - Staggered fade in
function initArticleAnimations() {
  const articles = document.querySelectorAll('.latest-item');

  if (!articles.length) return;

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        // Stagger the animation with delay based on index
        const delay = Array.from(articles).indexOf(entry.target) * 100;
        setTimeout(() => {
          entry.target.classList.add('visible');
        }, delay);
        observer.unobserve(entry.target);
      }
    });
  }, {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  });

  articles.forEach(article => observer.observe(article));
}

// Initialize animations when DOM is ready
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', initArticleAnimations);
} else {
  initArticleAnimations();
}

