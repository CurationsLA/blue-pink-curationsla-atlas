{{!< default}}

<!-- Enhanced Home Page Schema for AI Discovery -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "@id": "{{@site.url}}/#homepage",
  "name": "CURATIONSLA - Good Vibes LA Community Newsletter",
  "description": "Los Angeles' premier hyper-local community newsletter featuring good vibes, local business spotlights, and authentic LA culture from Silver Lake to Eagle Rock.",
  "url": "{{@site.url}}",
  "mainEntity": {
    "@type": "ItemList",
    "name": "Latest LA Community Content",
    "description": "Recent articles about Los Angeles neighborhoods, local businesses, and community events",
    "numberOfItems": "{{posts.length}}",
    "itemListElement": [
      {{#foreach posts}}
      {
        "@type": "NewsArticle",
        "position": {{@index}},
        "headline": "{{title}}",
        "url": "{{url absolute="true"}}",
        "datePublished": "{{date published_at format="YYYY-MM-DDTHH:mm:ss"}}Z",
        "articleSection": "{{#if primary_tag}}{{primary_tag.name}}{{else}}Los Angeles Community{{/if}}",
        "author": {
          "@type": "Organization",
          "name": "CURATIONSLA"
        },
        "publisher": {
          "@type": "Organization",
          "name": "CURATIONSLA"
        }{{#if feature_image}},
        "image": "{{feature_image}}"{{/if}}{{#if excerpt}},
        "description": "{{excerpt}}"{{/if}}
      }{{#unless @last}},{{/unless}}
      {{/foreach}}
    ]
  },
  "about": [
    {
      "@type": "Thing",
      "name": "Los Angeles Community",
      "description": "Hyper-local news and business spotlights"
    },
    {
      "@type": "Thing", 
      "name": "Local Business Directory",
      "description": "Curated local business recommendations"
    },
    {
      "@type": "Thing",
      "name": "Good Vibes Movement",
      "description": "Positive community engagement and content"
    }
  ],
  "audience": {
    "@type": "Audience",
    "audienceType": "Los Angeles residents, local business owners, community enthusiasts",
    "geographicArea": {
      "@type": "City",
      "name": "Los Angeles"
    }
  },
  "publisher": {
    "@type": "Organization",
    "@id": "{{@site.url}}/#organization",
    "name": "CURATIONSLA"
  },
  "spatialCoverage": {
    "@type": "Place",
    "name": "Los Angeles, California", 
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 34.0522,
      "longitude": -118.2437
    }
  },
  "contentLocation": {
    "@type": "Place",
    "name": "Los Angeles, CA",
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 34.0522,
      "longitude": -118.2437
    }
  }
}
</script>

<!-- Home Page AI Discovery Meta -->
<meta name="page-type" content="community-newsletter-homepage">
<meta name="content-freshness" content="regularly-updated">
<meta name="local-authority" content="established-la-publication">
<meta name="community-value" content="high-local-relevance">

<main class="site-main home-main">

  {{!-- DEBUG: Check for posts --}}
  {{#if posts}}
    <!-- DEBUG: Found {{posts.length}} posts -->
  {{else}}
    <!-- DEBUG: NO POSTS FOUND - Check Ghost admin for published posts -->
  {{/if}}

  {{!-- Main Articles Section --}}
  <section class="home-section home-latest">
    <header class="section-header">
      <h2 class="section-title">
        <span class="section-emoji">ü§ô</span>
        <span class="location-tag">LATEST VIBES</span>
      </h2>
      <div class="section-rule"></div>
    </header>

    {{!-- FULLY CLICKABLE Article List WITHOUT Featured Images --}}
    <div class="latest-list">
      {{#foreach posts}}
        <article class="latest-item {{post_class}}">
          <a href="{{url}}" class="latest-item-link">
            <div class="latest-item-content">
              <!-- Header with Tag and Date -->
              <div class="latest-item-header">
                <div style="display: flex; align-items: center; gap: 0.5rem; flex-wrap: wrap;">
                  {{#if primary_tag}}
                    {{#match primary_tag.slug "newsletters"}}<span class="latest-item-tag tag-newsletters">ü§ô LATEST VIBES</span>{{/match}}
                    {{#match primary_tag.slug "eats"}}<span class="latest-item-tag tag-eats">üçü EATS</span>{{/match}}
                    {{#match primary_tag.slug "events"}}<span class="latest-item-tag tag-events">üìÜ EVENTS</span>{{/match}}
                    {{#match primary_tag.slug "guides"}}<span class="latest-item-tag tag-guides">üó∫Ô∏è GUIDES</span>{{/match}}
                    {{#match primary_tag.slug "curators"}}<span class="latest-item-tag tag-curators">üëã CURATORS</span>{{/match}}
                    {{#match primary_tag.slug "community"}}<span class="latest-item-tag tag-community">üèòÔ∏è COMMUNITY</span>{{/match}}
                    {{#match primary_tag.slug "news"}}<span class="latest-item-tag">üì∞ NEWS</span>{{/match}}
                    {{#match primary_tag.slug "culture"}}<span class="latest-item-tag">üé≠ CULTURE</span>{{/match}}
                    {{#match primary_tag.slug "business"}}<span class="latest-item-tag">üíº BUSINESS</span>{{/match}}
                    {{#match primary_tag.slug "entertainment"}}<span class="latest-item-tag">üé™ ENTERTAINMENT</span>{{/match}}
                    {{#match primary_tag.slug "health"}}<span class="latest-item-tag">üíö HEALTH</span>{{/match}}
                    {{#match primary_tag.slug "tech"}}<span class="latest-item-tag">üíª TECH</span>{{/match}}
                    {{#match primary_tag.slug "art"}}<span class="latest-item-tag">üé® ART</span>{{/match}}
                    {{#unless primary_tag.slug}}<span class="latest-item-tag">üìù {{primary_tag.name}}</span>{{/unless}}
                  {{else}}
                    <span class="latest-item-tag">üìù GENERAL</span>
                  {{/if}}
                  <span class="read-time">‚è±Ô∏è {{reading_time}}</span>
                </div>
                <time class="latest-item-date">{{date published_at format="MMM D, YYYY"}}</time>
              </div>
              
      <!-- GREEN BOX AROUND TITLE (Uppercase) -->
      <h4 class="latest-item-title">
        <span>{{title}}</span>
      </h4>
              
              <!-- EXCERPT -->
              {{#if excerpt}}
                <p class="latest-item-excerpt">{{excerpt}}</p>
              {{/if}}
              
              <!-- MORE ‚Üí Link in bottom right -->
              <div class="latest-item-footer">
                <span class="more-link">MORE ‚Üí</span>
              </div>
            </div>
          </a>
        </article>
      {{/foreach}}
    </div>

    {{!-- Show message if no posts --}}
    {{^posts}}
      <div style="padding: 2rem; text-align: center; border: 2px solid #000;">
        <h3>No Posts Found</h3>
        <p>Create and publish posts in Ghost admin to see them here.</p>
      </div>
    {{/posts}}

    {{!-- BRUTALIST Purple/Green Pagination --}}
    {{#if pagination}}
    <div class="pagination">
      {{#if pagination.prev}}
        <a href="{{page_url pagination.prev}}" class="pagination-prev">‚Üê BACK</a>
      {{/if}}
      {{#if pagination.next}}
        <a href="{{page_url pagination.next}}" class="pagination-next">NEXT ‚Üí</a>
      {{/if}}
    </div>
    {{/if}}

  </section>

</main>