            text-transform: uppercase;
            margin: 32px 0 16px 0;
            padding-bottom: 8px;
            border-bottom: 4px solid #000000;
        }

        .content h3 {
            font-size: 20px;
            font-weight: 900;
            text-transform: uppercase;
            margin: 24px 0 12px 0;
            padding-left: 16px;
            border-left: 6px solid #8B5CF6;
        }

        .content strong {
