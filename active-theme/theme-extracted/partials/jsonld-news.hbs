{{!-- Simple JSON-LD for news --}}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "NewsArticle",
  "headline": "{{@site.title}}",
  "datePublished": "{{date format="YYYY-MM-DD"}}",
  "dateModified": "{{date format="YYYY-MM-DD"}}",
  "author": {
    "@type": "Organization",
    "name": "CurationsLA"
  },
  "publisher": {
    "@type": "Organization",
    "name": "CurationsLA"
  }
}
</script>